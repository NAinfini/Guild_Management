{
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(for dir in workers/api/*/)",
      "Bash(do)",
      "Bash(if [ -f \"$dir[id].ts\" ])",
      "Bash(then)",
      "Bash(if grep -q \"from ''../../../lib/\" \"$dir[id].ts\")",
      "Bash(echo:*)",
      "Bash(fi)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(npx wrangler deploy:*)",
      "Bash(git commit:*)",
      "Bash(curl:*)",
      "Bash(npx wrangler deployments:*)",
      "mcp__cloudflare-docs__search_cloudflare_documentation",
      "Bash(timeout 30 npx wrangler tail:*)",
      "Bash(npx wrangler:*)",
      "Bash(git push:*)",
      "Bash(node scripts/generate-admin-password.js:*)",
      "Bash(grep:*)",
      "Bash(npm run build)",
      "Bash(npm install:*)",
      "Bash(npx tsc:*)",
      "Bash(npm run dev:portal:*)",
      "Bash(npx playwright install:*)",
      "Bash(npx @executeautomation/playwright-mcp-server:*)",
      "Bash(npm ls:*)"
    ]
  },
  "mcpServers": {
    "desktop-commander": {
      "command": "npx",
      "args": [
        "-y",
        "@wonderwhy-er/desktop-commander"
      ]
    }
  }
}
