{
  "extends": "../../config/typescript/tsconfig.portal.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@guild/shared-api/*": ["../../packages/shared-api/src/*"],
      "@guild/shared-utils/*": ["../../packages/shared-utils/src/*"]
    },
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
