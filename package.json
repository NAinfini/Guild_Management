{
  "name": "guild-management",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:portal",
    "dev:portal": "vite --config config/vite/vite.portal.config.ts",
    "build": "npm run build:portal",
    "build:portal": "vite build --config config/vite/vite.portal.config.ts",
    "build:fresh": "npm install && npm run build:portal",
    "preview": "vite preview --config config/vite/vite.portal.config.ts",
    "lint": "npm run lint:portal && npm run lint:worker",
    "lint:portal": "eslint --config config/eslint/eslint.config.js \"apps/portal/src/**/*.{ts,tsx}\"",
    "lint:worker": "eslint --config config/eslint/eslint.config.js \"apps/worker/src/**/*.ts\"",
    "test": "npm run test:portal && npm run test:worker",
    "test:portal": "vitest --config config/vitest/vitest.portal.config.ts",
    "test:worker": "vitest --config config/vitest/vitest.workers.config.ts",
    "typecheck": "npm run typecheck:portal && npm run typecheck:worker && npm run typecheck:node",
    "typecheck:portal": "tsc -p config/typescript/tsconfig.portal.json",
    "typecheck:worker": "tsc -p config/typescript/tsconfig.worker.json",
    "typecheck:node": "tsc -p config/typescript/tsconfig.node.json",
    "worker:dev": "wrangler dev --config wrangler.jsonc",
    "worker:deploy": "wrangler deploy --config wrangler.jsonc",
    "db:generate": "drizzle-kit generate --config config/drizzle/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config config/drizzle/drizzle.config.ts",
    "db:check": "drizzle-kit check --config config/drizzle/drizzle.config.ts",
    "prune": "ts-prune --project config/typescript/tsconfig.portal.json",
    "clean": "rimraf dist .wrangler-output"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/space-grotesk": "^5.2.10",
    "@mui/material": "^7.3.7",
    "@mui/system": "^7.3.7",
    "@mui/x-data-grid": "^8.27.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-router": "^1.158.4",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/extensions": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "esbuild": "^0.27.3",
    "i18next": "^25.8.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "isomorphic-dompurify": "^2.36.0",
    "lucide-react": "^0.563.0",
    "motion": "^12.33.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-i18next": "^16.5.4",
    "react-is": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.6",
    "recharts": "^3.7.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260207.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/router-plugin": "^1.158.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-is": "^19",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "ts-prune": "^0.10.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  },
  "overrides": {
    "esbuild": "^0.27.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
