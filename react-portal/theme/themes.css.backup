/* Utility Helpers */
.text0 { color: var(--text0); }
.text1 { color: var(--text1); }
.bg0 { background-color: var(--bg0); }
.bg1 { background-color: var(--bg1); }
.bg2 { background-color: var(--bg2); }
.surface1 { background-color: var(--surface1); }

/* Reduced Motion Support - CRITICAL FOR ACCESSIBILITY */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }

  .atmo-layer-fx::before,
  .atmo-layer-fx::after,
  .atmo-layer-base {
    animation: none !important;
  }

  html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiButton-root:hover,
  html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiIconButton-root:hover {
    animation: none !important;
  }
}
