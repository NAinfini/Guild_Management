/* -------------------------------------------------------------------------- */
/*                                 THEME ENGINE                               */
/* -------------------------------------------------------------------------- */

:root {
  /* Default / Base Variables (Fallback) */
  --bg0: #0a0e1a;
  --bg1: #151b2e;
  --bg2: #1e293b;

  --surface0: #0a0e1a;
  --surface1: #151b2e;
  --surface2: #1e293b;

  --text0: #f8fafc;
  --text1: #94a3b8;
  --muted: #64748b;

  --accent0: #8b5cf6;
  --accent1: #06b6d4;

  --border: rgba(139, 92, 246, 0.3);
  --divider: rgba(71, 85, 105, 0.3);

  --shadow1: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow2: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  --shadow3: 0 20px 25px -5px rgba(0, 0, 0, 0.1);

  --radiusCard: 16px;
  --radiusBtn: 8px;
  --radiusInput: 8px;

  --stroke: 1px;

  --motionFast: 0.2s;
  --motionSlow: 0.5s;
  --ease: cubic-bezier(0.4, 0, 0.2, 1);

  --fx-intensity: 1;
  --glow: 0 0 10px rgba(139, 92, 246, 0.5);
  --noiseOpacity: 0.05;

  /* Signature Slots */
  --sigA: transparent;
  --sigB: transparent;
  --sigC: transparent;
}

/* -------------------------------------------------------------------------- */
/*                                THEME BLOCKS                                */
/* -------------------------------------------------------------------------- */

/* === DEFAULT / NEON-SPECTRAL (Cyberpunk / Hologram) === */
html[data-theme="default"],
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] {
  --bg0: #050510;
  --bg1: rgba(10, 15, 30, 0.6);
  --bg2: rgba(20, 25, 40, 0.8);

  --surface0: rgba(5, 5, 16, 0.8);
  --surface1: rgba(20, 25, 50, 0.4); /* Glass panels */
  --surface2: rgba(30, 35, 60, 0.6);

  --text0: #e2e8f0;
  --text1: #94a3b8;
  --muted: #475569;

  --accent0: #d946ef; /* Magenta Neon */
  --accent1: #06b6d4; /* Cyan Neon */

  --border: 1px solid rgba(217, 70, 239, 0.3);
  --divider: rgba(6, 182, 212, 0.2);

  --shadow1: 0 0 15px rgba(217, 70, 239, 0.1);
  --shadow2: 0 0 30px rgba(6, 182, 212, 0.15);
  --shadow3: 0 0 50px rgba(217, 70, 239, 0.2);

  --radiusCard: 2px; /* Techy / Sharp */
  --radiusBtn: 0px;  /* Clip-path handled in MUI */
  --radiusInput: 4px;

  --stroke: 1px;

  --motionFast: 0.15s;
  --motionSlow: 0.4s;
  --ease: cubic-bezier(0.2, 0.8, 0.2, 1);

  --fx-intensity: 1.0;
  --glow: 0 0 12px var(--accent0);
  --noiseOpacity: 0.08;

  /* Signature: Scanlines & Neon Tubing */
  --sigA: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(6, 182, 212, 0.05) 3px);
  --sigB: #06b6d4;
  --sigC: #d946ef;
}

/* === CHINESE-INK (Ink Wash / Parchment) === */
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] {
  --bg0: #f0f0e8; /* Warm Parchment Base */
  --bg1: #e6e6dc;
  --bg2: #dcdcd0;

  --surface0: #fcfcf9;
  --surface1: #f2f0e6;
  --surface2: #ffffff; /* High contrast paper */

  --text0: #1a1a1a; /* Ink Black */
  --text1: #4a4a4a;
  --muted: #8c8c8c;

  --accent0: #be123c; /* Seal Red */
  --accent1: #0f172a; /* Deep Ink */

  --border: 2px solid rgba(15, 23, 42, 0.8); /* Ink Stroke */
  --divider: rgba(15, 23, 42, 0.15);

  --shadow1: 2px 2px 0px rgba(0,0,0,0.1); /* Soft ink spread, not drop shadow */
  --shadow2: 4px 4px 8px rgba(0,0,0,0.15);
  --shadow3: 8px 8px 20px rgba(0,0,0,0.2);

  --radiusCard: 8px; /* Slightly rounded paper */
  --radiusBtn: 255px 15px 225px 15px / 15px 225px 15px 255px; /* Organic hand-drawn feel via border-radius trickery or overrides */
  --radiusInput: 4px;

  --stroke: 2px;

  --motionFast: 0.3s;
  --motionSlow: 0.8s;
  --ease: cubic-bezier(0.25, 0.46, 0.45, 0.94); /* Ink flow */

  --fx-intensity: 0.7;
  --glow: 0 0 0 transparent; /* No glow in ink theme */
  --noiseOpacity: 0.12; /* Paper Texture */

  /* Signature: Brush Strokes */
  --sigA: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.4'/%3E%3C/svg%3E");
}

/* === DARK-GOLD (Executive / Matte Black + Metal) === */
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] {
  --bg0: #000000;
  --bg1: #111111;
  --bg2: #1a1a1a;

  --surface0: #0a0a0a;
  --surface1: #141414; /* Matte Ceramic */
  --surface2: #1f1f1f;

  --text0: #e5e5e5;
  --text1: #a3a3a3;
  --muted: #525252;

  --accent0: #fbbf24; /* Polished Gold */
  --accent1: #d4af37; /* Metallic Gold */

  --border: 1px solid rgba(251, 191, 36, 0.4);
  --divider: rgba(255, 255, 255, 0.1);

  --shadow1: 0 10px 30px rgba(0,0,0,0.8);
  --shadow2: 0 20px 40px rgba(0,0,0,0.9);
  --shadow3: 0 30px 60px rgba(0,0,0,1);

  --radiusCard: 4px; /* Precision */
  --radiusBtn: 2px;
  --radiusInput: 0px;

  --stroke: 1px;

  --motionFast: 0.2s;
  --motionSlow: 0.6s;
  --ease: cubic-bezier(0.22, 1, 0.36, 1); /* Mechanical Precision */

  --fx-intensity: 0.8;
  --glow: 0 0 5px rgba(251, 191, 36, 0.3);
  --noiseOpacity: 0.03; /* Micro-matte */
}

/* === REDGOLD (Royal / Lacquer + Filigree) === */
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] {
  --bg0: #1a0505; /* Deep Crimson Black */
  --bg1: #2a0a0a;
  --bg2: #3f0e0e;

  --surface0: #2b0b0b;
  --surface1: #450a0a; /* Red Lacquer */
  --surface2: #5f0f0f;

  --text0: #fff1f2;
  --text1: #fecaca;
  --muted: #991b1b;

  --accent0: #ef4444; /* Royal Red */
  --accent1: #f59e0b; /* Gold Fill */

  --border: 1px solid rgba(245, 158, 11, 0.5);
  --divider: rgba(245, 158, 11, 0.2);

  --shadow1: 0 4px 12px rgba(0,0,0,0.5);
  --shadow2: 0 8px 24px rgba(69, 10, 10, 0.5);
  --shadow3: 0 12px 32px rgba(0,0,0,0.7);

  --radiusCard: 12px;
  --radiusBtn: 4px;
  --radiusInput: 4px;

  --stroke: 2px; /* Ornate */

  --motionFast: 0.25s;
  --motionSlow: 0.7s;
  --ease: cubic-bezier(0.4, 0.0, 0.2, 1); /* Heavy/Royal */

  --fx-intensity: 0.9;
  --glow: 0 0 15px rgba(239, 68, 68, 0.4);
  --noiseOpacity: 0.04;
}

/* === SOFTPINK (Grace / Porcelain + Pearl) === */
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] {
  --bg0: #fff0f5; /* Lavender Blush */
  --bg1: #fff5f9;
  --bg2: #ffe4e6;

  --surface0: rgba(255, 255, 255, 0.6);
  --surface1: rgba(255, 255, 255, 0.85); /* Porcelain */
  --surface2: #ffffff;

  --text0: #831843; /* Pink 900 */
  --text1: #be185d;
  --muted: #fbcfe8;

  --accent0: #ec4899; /* Pink 500 */
  --accent1: #f472b6; /* Pearl */

  --border: 1px solid rgba(236, 72, 153, 0.2);
  --divider: rgba(236, 72, 153, 0.1);

  --shadow1: 0 4px 20px rgba(236, 72, 153, 0.1);
  --shadow2: 0 8px 30px rgba(236, 72, 153, 0.15);
  --shadow3: 0 12px 40px rgba(236, 72, 153, 0.2);

  --radiusCard: 24px; /* Super Soft */
  --radiusBtn: 999px; /* Pill */
  --radiusInput: 16px;

  --stroke: 1px;

  --motionFast: 0.3s;
  --motionSlow: 0.6s;
  --ease: cubic-bezier(0.34, 1.56, 0.64, 1); /* Bouncy / Playful */

  --fx-intensity: 1.0;
  --glow: 0 0 20px rgba(255, 255, 255, 0.8);
  --noiseOpacity: 0.02; /* Pearl grain */
}


/* -------------------------------------------------------------------------- */
/*                              ATMOSPHERE LAYER                              */
/* -------------------------------------------------------------------------- */

.app-atmosphere {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  pointer-events: none;
  overflow: hidden;
  background: var(--bg0);
  transition: background 0.5s ease;
}

/* Texture Layer */
.atmo-layer-texture {
  position: absolute;
  inset: 0;
  opacity: var(--noiseOpacity);
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  mix-blend-mode: overlay;
  pointer-events: none;
}

/* FX Layer (Blobs, Glows, Beams) - Theme Specific */
.atmo-layer-fx {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
}

/* --- THEME SPECIFIC ATMOSPHERES --- */

/* These work both globally (html[data-theme]) and locally (.theme-scope[data-theme]) */

/* Neon Spectral: Floating City Blobs + Scanlines + Grid */
html[data-theme="neonSpectral"] .atmo-layer-fx::before,
.theme-scope[data-theme="neonSpectral"] .atmo-layer-fx::before {
  content: "";
  position: absolute;
  top: -20%;
  left: -20%;
  width: 60%;
  height: 60%;
  background: radial-gradient(circle, rgba(217, 70, 239, 0.2), transparent 70%);
  filter: blur(80px);
  animation: floatOrb 20s infinite alternate ease-in-out;
}
html[data-theme="neonSpectral"] .atmo-layer-fx::after,
.theme-scope[data-theme="neonSpectral"] .atmo-layer-fx::after {
  content: "";
  position: absolute;
  bottom: -20%;
  right: -20%;
  width: 70%;
  height: 70%;
  background: radial-gradient(circle, rgba(6, 182, 212, 0.2), transparent 70%);
  filter: blur(100px);
  animation: floatOrb 25s infinite alternate-reverse ease-in-out;
}
html[data-theme="neonSpectral"] .atmo-layer-base,
.theme-scope[data-theme="neonSpectral"] .atmo-layer-base {
  background:
    repeating-linear-gradient(
      0deg,
      transparent 0px,
      transparent 2px,
      rgba(6, 182, 212, 0.03) 3px,
      rgba(6, 182, 212, 0.03) 4px
    ),
    repeating-linear-gradient(
      90deg,
      transparent 0px,
      transparent 50px,
      rgba(217, 70, 239, 0.02) 51px,
      transparent 52px
    ),
    repeating-linear-gradient(
      0deg,
      transparent 0px,
      transparent 50px,
      rgba(6, 182, 212, 0.02) 51px,
      transparent 52px
    );
  position: absolute;
  inset: 0;
  animation: scanlineScroll 10s linear infinite;
}
/* Neon: Corner spotlight beams */
html[data-theme="neonSpectral"] .atmo-layer-texture::after,
.theme-scope[data-theme="neonSpectral"] .atmo-layer-texture::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background:
    radial-gradient(ellipse at top left, rgba(217, 70, 239, 0.08), transparent 40%),
    radial-gradient(ellipse at bottom right, rgba(6, 182, 212, 0.08), transparent 40%);
  animation: pulseBeam 4s infinite alternate ease-in-out;
}

/* Chinese Ink: Drifting Clouds + Brush Strokes */
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .atmo-layer-fx::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  background-image:
    radial-gradient(circle at 30% 20%, rgba(20, 20, 20, 0.04), transparent 50%),
    radial-gradient(circle at 70% 60%, rgba(20, 20, 20, 0.03), transparent 60%),
    radial-gradient(circle at 50% 80%, rgba(20, 20, 20, 0.02), transparent 70%);
  filter: blur(40px);
  animation: driftCloud 60s linear infinite;
}
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .atmo-layer-fx::after {
  content: "";
  position: absolute;
  top: 5%;
  right: 10%;
  width: 300px;
  height: 300px;
  background:
    radial-gradient(ellipse at center, transparent 20%, rgba(26, 26, 26, 0.02) 40%, transparent 70%);
  filter: blur(30px);
  animation: inkBloom 8s infinite alternate ease-in-out;
}
/* Ink: Subtle vignette */
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .atmo-layer-base {
  background: radial-gradient(ellipse at center, transparent 30%, rgba(0, 0, 0, 0.03) 100%);
  position: absolute;
  inset: 0;
}

/* Dark Gold: Spotlight Cones + Stage Lighting */
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .atmo-layer-fx::before {
  content: "";
  position: absolute;
  top: -50%;
  left: 20%;
  width: 150px;
  height: 200%;
  background: linear-gradient(180deg, rgba(251, 191, 36, 0.12), transparent 60%);
  transform: rotate(25deg);
  filter: blur(20px);
  animation: spotlightSway 6s infinite alternate ease-in-out;
}
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .atmo-layer-fx::after {
  content: "";
  position: absolute;
  top: -50%;
  right: 20%;
  width: 180px;
  height: 200%;
  background: linear-gradient(180deg, rgba(251, 191, 36, 0.08), transparent 50%);
  transform: rotate(-15deg);
  filter: blur(30px);
  animation: spotlightSway 8s infinite alternate-reverse ease-in-out;
}
/* Gold: Center stage glow */
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .atmo-layer-base {
  background:
    radial-gradient(ellipse at 50% 20%, rgba(251, 191, 36, 0.03), transparent 60%),
    radial-gradient(ellipse at center, rgba(251, 191, 36, 0.02), transparent 80%);
  position: absolute;
  inset: 0;
  animation: pulseGlow 5s infinite alternate ease-in-out;
}

/* Soft Pink: Floating Bokeh + Multiple Orbs */
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .atmo-layer-fx::before {
  content: "";
  position: absolute;
  top: 10%;
  right: 10%;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, rgba(236, 72, 153, 0.12), transparent 60%);
  filter: blur(50px);
  animation: pulseBreath 8s infinite alternate ease-in-out;
}
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .atmo-layer-fx::after {
  content: "";
  position: absolute;
  bottom: 15%;
  left: 15%;
  width: 350px;
  height: 350px;
  background: radial-gradient(circle, rgba(244, 114, 182, 0.1), transparent 65%);
  filter: blur(60px);
  animation: pulseBreath 10s infinite alternate-reverse ease-in-out;
}
/* Pink: Soft pearl shimmer overlay */
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .atmo-layer-base {
  background:
    radial-gradient(ellipse at 30% 30%, rgba(255, 255, 255, 0.08), transparent 50%),
    radial-gradient(ellipse at 70% 70%, rgba(236, 72, 153, 0.03), transparent 60%);
  position: absolute;
  inset: 0;
  animation: shimmerWave 6s infinite alternate ease-in-out;
}

/* Red Gold: Torchlight Flicker + Ember Glow */
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .atmo-layer-fx {
  background: radial-gradient(circle at 50% 80%, rgba(239, 68, 68, 0.08), transparent 60%);
  animation: flickerTorch 4s infinite alternate ease-in-out;
}
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .atmo-layer-fx::before {
  content: "";
  position: absolute;
  top: 20%;
  left: 10%;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(245, 158, 11, 0.08), transparent 70%);
  filter: blur(60px);
  animation: emberFloat 12s infinite ease-in-out;
}
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .atmo-layer-fx::after {
  content: "";
  position: absolute;
  bottom: 30%;
  right: 15%;
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, rgba(239, 68, 68, 0.06), transparent 65%);
  filter: blur(50px);
  animation: emberFloat 15s infinite alternate ease-in-out;
}
/* Red Gold: Royal vignette */
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .atmo-layer-base {
  background:
    radial-gradient(ellipse at center, transparent 40%, rgba(26, 5, 5, 0.3) 100%),
    radial-gradient(ellipse at 50% 50%, rgba(245, 158, 11, 0.02), transparent 70%);
  position: absolute;
  inset: 0;
}


/* -------------------------------------------------------------------------- */
/*                                 ANIMATIONS                                 */
/* -------------------------------------------------------------------------- */

@keyframes floatOrb {
  0% { transform: translate(0, 0); }
  100% { transform: translate(50px, 30px); }
}

@keyframes scanlineScroll {
  0% { transform: translateY(0); }
  100% { transform: translateY(100%); }
}

@keyframes driftCloud {
  0% { transform: translate(0, 0); }
  100% { transform: translate(-50px, -50px); }
}

@keyframes pulseBreath {
  0% { transform: scale(1); opacity: 0.5; }
  100% { transform: scale(1.1); opacity: 0.8; }
}

@keyframes flickerTorch {
  0% { opacity: 0.4; transform: scale(0.98); }
  50% { opacity: 0.6; transform: scale(1.02); }
  100% { opacity: 0.5; transform: scale(1.0); }
}

@keyframes metallicSweep {
  0% { background-position: 200% center; }
  100% { background-position: -200% center; }
}

/* Glitch animation for neon theme */
@keyframes glitchJitter {
  0%, 100% { transform: translate(0, 0) scale(1.02); }
  10% { transform: translate(-1px, 1px) scale(1.02); }
  20% { transform: translate(1px, -1px) scale(1.02); }
  30% { transform: translate(-1px, -1px) scale(1.02); }
  40% { transform: translate(1px, 1px) scale(1.02); }
  50% { transform: translate(-1px, 0) scale(1.02); }
  60% { transform: translate(1px, 0) scale(1.02); }
  70% { transform: translate(0, -1px) scale(1.02); }
  80% { transform: translate(0, 1px) scale(1.02); }
  90% { transform: translate(-1px, 1px) scale(1.02); }
}

/* Glitch chromatic aberration */
@keyframes glitchChroma {
  0%, 100% {
    text-shadow:
      -1px 0 2px rgba(6, 182, 212, 0.8),
      1px 0 2px rgba(217, 70, 239, 0.8);
  }
  50% {
    text-shadow:
      1px 0 2px rgba(6, 182, 212, 0.8),
      -1px 0 2px rgba(217, 70, 239, 0.8);
  }
}

@keyframes pulseBeam {
  0% { opacity: 0.5; }
  100% { opacity: 1; }
}

@keyframes inkBloom {
  0% { transform: scale(1) rotate(0deg); }
  100% { transform: scale(1.2) rotate(10deg); }
}

@keyframes spotlightSway {
  0% { transform: rotate(20deg) translateX(0); }
  100% { transform: rotate(30deg) translateX(20px); }
}

@keyframes pulseGlow {
  0% { opacity: 0.7; }
  100% { opacity: 1; }
}

@keyframes shimmerWave {
  0% { transform: translateY(0) scale(1); opacity: 0.6; }
  100% { transform: translateY(-10px) scale(1.05); opacity: 0.9; }
}

@keyframes emberFloat {
  0% { transform: translateY(0) translateX(0) scale(1); }
  50% { transform: translateY(-30px) translateX(20px) scale(1.1); }
  100% { transform: translateY(0) translateX(0) scale(1); }
}


/* -------------------------------------------------------------------------- */
/*                            COMPONENT SIGNATURES                            */
/* -------------------------------------------------------------------------- */

/* 1. CHINESE INK: INK SPREAD HOVER + CALLIGRAPHY EFFECTS */
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .MuiPaper-root,
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .MuiCard-root {
  box-shadow: 5px 5px 15px rgba(0,0,0,0.05);
  border: 1px solid rgba(0,0,0,0.05);
  position: relative;
}
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .MuiCard-root::before {
  content: "";
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(135deg, rgba(190, 18, 60, 0.05), transparent, rgba(26, 26, 26, 0.02));
  opacity: 0;
  transition: opacity 0.5s ease;
  pointer-events: none;
  border-radius: inherit;
}
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .MuiCard-root:hover::before {
  opacity: 1;
}
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .MuiButton-root:hover {
  background-color: rgba(26, 26, 26, 0.05);
  box-shadow: 0 0 15px 5px rgba(26, 26, 26, 0.15); /* Ink spread */
  transform: translateY(-1px);
}
html[data-theme="chineseInk"],
.theme-scope[data-theme="chineseInk"] .MuiIconButton-root:hover {
  background-color: rgba(26, 26, 26, 0.08);
  box-shadow: 0 0 10px 3px rgba(26, 26, 26, 0.1);
}

/* 2. DARK GOLD: SPECULAR METALLIC SWEEP */
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .MuiPaper-root,
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .MuiCard-root {
  box-shadow:
    inset 0 1px 0 rgba(255,255,255,0.05),
    inset 0 -1px 0 rgba(0,0,0,0.5),
    0 10px 20px rgba(0,0,0,0.5);
}
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .MuiButton-root:active {
  box-shadow: inset 0 2px 4px rgba(0,0,0,0.5);
  transform: translateY(1px);
}
html[data-theme="darkGold"],
.theme-scope[data-theme="darkGold"] .MuiIconButton-root:hover {
  background-color: rgba(251, 191, 36, 0.1);
  box-shadow: 0 0 15px rgba(251, 191, 36, 0.3);
}

/* 3. NEON SPECTRAL: HOLOGRAPHIC GLOW + GLITCH + DIGITAL EFFECTS */
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiCard-root {
  position: relative;
}
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiCard-root::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(217, 70, 239, 0.05), transparent, rgba(6, 182, 212, 0.05));
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  border-radius: inherit;
}
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiCard-root:hover {
  box-shadow: 0 0 20px rgba(0, 240, 255, 0.3), inset 0 0 10px rgba(0, 240, 255, 0.1);
  border-color: var(--accent1);
}
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiCard-root:hover::after {
  opacity: 1;
}
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiButton-root:active {
  transform: scale(0.98);
  box-shadow: 0 0 5px var(--accent1);
}
html[data-theme="neonSpectral"],
.theme-scope[data-theme="neonSpectral"] .MuiIconButton-root:hover {
  background-color: rgba(6, 182, 212, 0.15);
  box-shadow: 0 0 20px rgba(6, 182, 212, 0.4);
  animation: glitchJitter 0.3s ease-in-out;
}

/* 4. RED GOLD: LACQUER BLOOM EXPANSION */
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .MuiCard-root {
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .MuiCard-root:hover {
  box-shadow: 0 8px 25px rgba(245, 158, 11, 0.15);
  border-top-color: var(--accent0);
}
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .MuiButton-root:hover {
  box-shadow: 0 0 15px rgba(245, 158, 11, 0.3);
}
html[data-theme="redGold"],
.theme-scope[data-theme="redGold"] .MuiIconButton-root:hover {
  background-color: rgba(245, 158, 11, 0.1);
  box-shadow: 0 0 15px rgba(245, 158, 11, 0.3);
}

/* 5. SOFT PINK: PEARL SHIMMER SWEEP + LUSTER */
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiButton-contained,
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiCard-root {
  box-shadow:
    -5px -5px 10px rgba(255,255,255,0.8),
    5px 5px 15px rgba(219, 39, 119, 0.1);
  position: relative;
}
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiCard-root::before {
  content: "";
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.4), transparent 60%);
  opacity: 0;
  transition: opacity 0.4s ease;
  pointer-events: none;
  border-radius: inherit;
}
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiButton-contained:hover,
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiCard-root:hover {
  transform: translateY(-2px);
  box-shadow:
    -5px -5px 10px rgba(255,255,255,1),
    5px 5px 20px rgba(219, 39, 119, 0.2);
}
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiCard-root:hover::before {
  opacity: 1;
}
html[data-theme="softPink"],
.theme-scope[data-theme="softPink"] .MuiIconButton-root:hover {
  background-color: rgba(236, 72, 153, 0.08);
  box-shadow: 0 8px 20px rgba(236, 72, 153, 0.2);
  transform: translateY(-2px) scale(1.05);
}


